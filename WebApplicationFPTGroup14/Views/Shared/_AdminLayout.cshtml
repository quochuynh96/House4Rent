
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

    <!-- App CSS -->
    <link type="text/css" href="~/Content/AdminThem/app.css" rel="stylesheet">

    <style>
        .field {
            width: 35%;
            text-align: right;
            border-right: solid 1px #e2e8ee;
        }
        #modalPostInfo {
            padding: 0px !important;
        }
    </style>
</head>
<body>
    <div class="mdk-drawer-layout js-mdk-drawer-layout" data-fullbleed data-push data-responsive-width="992px"
         data-has-scrolling-region>

        <div class="mdk-drawer-layout__content">
            <div class="mdk-header-layout js-mdk-header-layout  mdk-header--fixed  mdk-header-layout__content--scrollable">

                <!-- ##### Header ##### -->
                <div class="mdk-header js-mdk-header bg-primary" data-fixed>
                    <div class="mdk-header__content">
                        <nav class="navbar navbar-expand-md bg-primary navbar-dark d-flex-none">
                            <button class="btn btn-link text-white pl-0" type="button" data-toggle="sidebar">
                                <i class="material-icons align-middle md-36">short_text</i>
                            </button>

                            <div class="page-title m-0"><a href="~/Home/Index" style="text-decoration: none; color: white">House4Rent.com</a></div>

                            <!-- ### Search box And Notification ### -->
                            <div class="collapse navbar-collapse" id="mainNavbar">
                                <ul class="navbar-nav ml-auto align-items-center">

                                    <li class="nav-item nav-link">
                                        <div class="form-group m-0">
                                            <div class="input-group input-group--inline">
                                                <div class="input-group-addon">
                                                    <i class="material-icons">search</i>
                                                </div>
                                                <input type="text" class="form-control" name="search"
                                                       placeholder="Search app..">
                                            </div>
                                        </div>
                                    </li>

                                    <!-- Notification -->
                                    <li class="nav-item dropdown notifications d-flex align-self-center align-items-center"
                                        id="navbarNotifications">

                                        <a href="#" class="nav-link dropdown-toggle notifications--active"
                                           data-toggle="dropdown" aria-expanded="false"
                                           title="Hiện có 3 thông báo">
                                            <i class="material-icons align-middle">notifications</i>
                                        </a>

                                        <div class="dropdown-menu dropdown-menu-right"
                                             aria-labelledby="notificationsDropdown" id="notificationsDropdown">

                                            <ul class="nav nav-tabs-notifications d-flex px-0" id="notifications-ul"
                                                role="tablist">
                                                <li class="nav-item">
                                                    <a class="nav-link active">Notifications</a>
                                                </li>
                                            </ul>
                                            <!-- Notification content -->
                                            <div class="tab-content" id="notifications-tabs">
                                                <div class="tab-pane fade show active" id="notifications"
                                                     role="tabpanel" aria-labelledby="notifications-tab">
                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item">
                                                            <div class="w-100">
                                                                <a href="/Admin/PostForApproval"></a>
                                                                Có @ViewBag.NumberDisApprovalPost bài cần phê duyệt
                                                            </div>
                                                            @*<div class="w-100 text-muted">25 mins ago</div>*@
                                                        </li>
                                                        <li class="list-group-item">
                                                            <div class="w-100">
                                                                <a href="#"></a> Có 2 tài khoản cần phê duyệt
                                                            </div>
                                                            <div class="w-100 text-muted">7 hrs ago</div>
                                                        </li>
                                                        @*<li class="list-group-item text-right">
                                                            <a href="#">
                                                                <span class="align-middle">View All</span>
                                                                <i class="material-icons md-18 align-middle">arrow_forward</i>
                                                            </a>
                                                        </li>*@
                                                    </ul>
                                                </div>
                                            </div>

                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>

                @RenderBody()

            </div>
        </div>

        <!-- ##### Left side bar ##### -->
        <div class="mdk-drawer js-mdk-drawer" id="default-drawer">
            <div class="mdk-drawer__content">
                <div class="mdk-drawer__inner" data-simplebar data-simplebar-force-enabled="true">
                    <nav class="drawer  drawer--dark">
                        <div class="drawer-spacer">
                            <div class="media align-items-center">
                                <a href="javascript:void()" class="drawer-brand-circle mr-2">S</a>
                                <div class="media-body">
                                    <a href="javascript:void()" class="h5 m-0 text-link">Chào mừng <b>@{if (Session["accountName"] != null) { Write(Session["accountName"]); } }</b></a>
                                </div>
                            </div>
                        </div>
                        <!-- ##### HEADING Quản lý tài khoản ##### -->
                        <div class="py-2 drawer-heading">
                            Quản lý tài khoản
                        </div>

                        <!-- MENU -->
                        <ul class="drawer-menu" id="dasboardMenu" data-children=".drawer-submenu">
                            <li class="drawer-menu-item @if (ViewBag.PageIndex == 0) { Write("drawer-menu-item-active"); } ">
                                <a href="/Admin/AllAccount">
                                    <i class="material-icons">pages</i>
                                    <span class="drawer-menu-text"> Tất cả tài khoản</span>
                                </a>
                            </li>
                            <li class="drawer-menu-item @if (ViewBag.PageIndex == 1) { Write("drawer-menu-item-active"); } ">
                                <a href="/Admin/AccountForApproval">
                                    <i class="material-icons">pages</i>
                                    <span class="drawer-menu-text"> Tài khoản chờ phê duyệt</span>
                                </a>
                            </li>
                        </ul>

                        <!-- ##### HEADING Quản lý bài đăng ##### -->
                        <div class="py-2 drawer-heading">
                            Quản lý bài đăng
                        </div>

                        <!-- MENU -->
                        <ul class="drawer-menu" id="mainMenu" data-children=".drawer-submenu">
                            <li class="drawer-menu-item @if (ViewBag.PageIndex == 2) { Write("drawer-menu-item-active"); } ">
                                <a href="~/Admin/AllPost">
                                    <i class="material-icons">pages</i>
                                    <span class="drawer-menu-text"> Tất cả bài viết</span>
                                </a>
                            </li>
                            <li class="drawer-menu-item @if (ViewBag.PageIndex == 3) { Write("drawer-menu-item-active"); } ">
                                <a href="/Admin/PostForApproval">
                                    <i class="material-icons">pages</i>
                                    <span class="drawer-menu-text"> Bài viết chờ phê duyệt</span>
                                </a>
                            </li>
                        </ul>

                        <!-- ##### HEADING Quản lý bài đăng ##### -->
                        <div class="py-2 drawer-heading">
                            Tài khoản
                        </div>

                        <!-- MENU -->
                        <ul class="drawer-menu" id="mainMenu" data-children=".drawer-submenu">
                            <li class="drawer-menu-item @if (ViewBag.PageIndex == 4) { Write("drawer-menu-item-active"); } ">
                                <a href="/Account/ChangePassWord">
                                    <i class="material-icons">pages</i>
                                    <span class="drawer-menu-text"> Đổi mật khẩu</span>
                                </a>
                            </li>
                            <li class="drawer-menu-item ">
                                <a href="/Account/Logout">
                                    <i class="material-icons">pages</i>
                                    <span class="drawer-menu-text"> Đăng xuất</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        
        <!-- Modal Thong tin bai viet -->
        <div class="modal fade" id="modalPostInfo" tabindex="-1" role="dialog" style="padding-left: 0px;">
            <div class="modal-dialog" role="document" style="width: 100%; max-width: 1024px; margin: 3px auto;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Thông tin bài đăng</h5>
                        <button type="button" id="closeModalPostInfo" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body p-0">
                        <div class="row">
                            <div class="col-sm-12 col-md-6 pt-1 pb-1 pl-3">
                                <table class="table table-bordered mb-0">
                                    <tbody>
                                        <tr>
                                            <td class="field">Tiêu đề :</td>
                                            <td id="titleModal">Cho thuê phòng trọ giá rẻ</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Thời điểm đăng :</td>
                                            <td id="postDayModal">22/2/2018</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Địa chỉ :</td>
                                            <td id="addressModal">214 Trần Đại Nghĩa, Đà Nẵng</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Loại phòng :</td>
                                            <td id="typeModal">Nhà nguyên căn</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Diện tích :</td>
                                            <td id="acreageModal">20 m<sup>2</sup></td>
                                        </tr>
                                        <tr>
                                            <td class="field">Giá thuê :</td>
                                            <td id="priceModal">1.500.000 VND</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Tiện nghi :</td>
                                            <td id="extensionModal">Vệ sinh trong, có bãi đỗ xe, kệ bếp, gác lửng.</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Mô tả :</td>
                                            <td id="descriptionModal">Phòng trọ rộng rãi, thoáng mát, an ninh tốt, gần khu đô thị.</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Số người tối đa :</td>
                                            <td id="maxPeopleModal">3 người</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Người đăng :</td>
                                            <td id="nameModal">PhucTD5</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Số điện thoại :</td>
                                            <td id="phoneModal">0946901161</td>
                                        </tr>
                                        <tr>
                                            <td class="field">Email :</td>
                                            <td id="emailModal">trandaiphuc.1501@gmail.com</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-sm-12 col-md-6 d-flex align-items-center">
                                <div id="carouselId" class="carousel slide pr-sm-0 pr-md-4" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        @* indicators will show here *@
                                    </ol>
                                    <div class="carousel-inner" role="listbox">
                                        @* images will show here *@
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselId" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselId" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-sm btn-danger" title="Xóa bài viết này"
                                data-toggle="modal" data-target="#modalSendMessage"
                                data-dismiss="modal" id="btnDelete">
                            Xóa
                        </button>
                        <button type="button" post-id="" id="btnDissApproval" title="Bỏ phê duyệt bài viết này"
                                class="btn btn-sm btn-danger w-25 ml-3" style="display: none;">
                            Bỏ phê duyệt
                        </button>
                        <button type="button" post-id="" id="btnApproval" title="Phê duyệt bài viết này"
                                class="btn btn-sm btn-primary w-25 ml-3">
                            Phê duyệt
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Thong tin tai khoan -->
        <div class="modal fade" id="modalAccountInfo" tabindex="-1" role="dialog" style="padding-left: 0px;">
        <div class="modal-dialog" role="document" style="width: 100%; max-width: 600px; margin: 3px auto; margin-top: 3%">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông tin tài khoản</h5>
                    <button type="button" id="closeModalAccountInfo" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                            <table class="table table-bordered mb-0">
                                <tbody>
                                    <tr>
                                        <td class="field">Tên tài khoản :</td>
                                        <td id="accountIDModal"></td>
                                    </tr>
                                    <tr>
                                        <td class="field">Họ tên :</td>
                                        <td id="nameAccountModal">ABCD<sup>2</sup></td>
                                    </tr>
                                    <tr>
                                        <td class="field">Ngày sinh :</td>
                                        <td id="birthdayAccountModal">22/2/2018</td>
                                    </tr>
                                    <tr>
                                        <td class="field">Giới tính :</td>
                                        <td id="sexAccountModal">N/A</td>
                                    </tr>
                                    <tr>
                                        <td class="field">Email :</td>
                                        <td id="emailAccountModal">abc@gmail.com</td>
                                    </tr>
                                    <tr>
                                        <td class="field">Số điện thoại :</td>
                                        <td id="phoneAccountModal">0123456789</td>
                                    </tr>
                                    <tr>
                                        <td class="field">Thành phố :</td>
                                        <td id="cityAccountModal">N/A</td>
                                    </tr>
                                    <tr>
                                        <td class="field">Quận/Huyện/Thị xã :</td>
                                        <td id="townshipAccountModal">N/A</td>
                                    </tr>
                                </tbody>
                            </table>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button account-id="" type="button" class="btn btn-sm btn-danger" title="Xóa tài khoản này"
                            data-toggle="modal" data-target="#modalSendMessage"
                            data-dismiss="modal" id="btnDeleteAccount">
                        Xóa
                    </button>
                    <button type="button" account-id="" id="btnDissApprovalAccount" title="Bỏ phê duyệt tài khoản này"
                            class="btn btn-sm btn-danger w-25 ml-3" style="display: none;">
                        Bỏ phê duyệt
                    </button>
                    <button type="button" account-id="" id="btnBlockAccount" title="Khoá tài khoản này"
                            class="btn btn-sm btn-primary w-25 ml-3" style="display: none;">
                        Khoá
                    </button>
                    <button type="button" account-id="" id="btnApprovalAccount" title="Phê duyệt tài khoản này"
                            class="btn btn-sm btn-primary w-25 ml-3">
                        Phê duyệt
                    </button>
                    <button type="button" account-id="" id="btnUnlockAccount" title="Mở khoá tài khoản này"
                            class="btn btn-sm btn-primary w-25 ml-3">
                        Bỏ khoá
                    </button>
                </div>
            </div>
        </div>
    </div>

        <!-- Modal Phan hoi -->
        <div class="modal fade" id="modalSendMessage" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="feedbackModalTitle">Xác nhận xóa bài viết</h5>
                    </div>
                    <div class="modal-body">
                        <textarea id="feedback" class="form-control" cols="20" rows="2" placeholder="Gửi phản hồi đến người đăng bài"></textarea>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" id="btnCancelSendMessage" 
                                class="btn btn-sm btn-outline-secondary w-50" data-dismiss="modal">Hủy</button>
                        <button type="button" id="btnSubmitDelete" 
                                class="btn btn-sm btn-outline-secondary w-50">Xác nhận xóa</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Phan hoi Page Account-->
        

    </div>

    <!-- jQuery -->
    <script src="~/Scripts/jquery/jquery-2.2.4.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap/popper.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/dom-factory.js"></script>
    <script src="~/Scripts/plugins/material-design-kit.js"></script>
    <script src="~/Scripts/Custom/admin-post.js"></script>
    <script src="~/Scripts/Custom/admin-account.js"></script>
    <script src="~/Scripts/Custom/validate-change-password.js"></script>
    <script>
        (function () {
            'use strict';
            // Self Initialize DOM Factory Components
            domFactory.handler.autoInit()


            // Connect button(s) to drawer(s)
            var sidebarToggle = document.querySelectorAll('[data-toggle="sidebar"]')

            sidebarToggle.forEach(function (toggle) {
                toggle.addEventListener('click', function (e) {
                    var selector = e.currentTarget.getAttribute('data-target') || '#default-drawer';
                    var drawer = document.querySelector(selector);
                    if (drawer) {
                        if (selector == '#default-drawer') {
                            $('.container-fluid').toggleClass('container--max');
                        }
                        drawer.mdkDrawer.toggle();
                    }
                });
            });
        })();
    </script>
</body>
</html>